//6)Find sum of cost of all books listed
int total=0;
for(int r=2;r<=rows;r++)
{
	String price=driver.findElement(By.xpath("//table[@name='BookTable']//tr["+r+"]//td[2]")).getText();
	total=total+Integer.parseInt(price);
	
}
System.out.println(total);
